  "version": "0.2.0",
  "configurations": [



{
    "name": "Run Tests",
    "cwd": "${workspaceRoot}",
    "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
    "args": [
        "--compilers", "ts:ts-node/register",
        "--require", "tests/tshooks.js",
        "-u", "tdd",
        "--timeout", "999999",
        "no--colors",
        "${workspaceRoot}/tests/*.spec.ts"
    ],
    "runtimeArgs": [
        "--nolazy"
    ],
    "sourceMaps": true,
    "outFiles": [
        "${workspaceRoot}/out/**/*.js"
    ],
    "type": "node",
    "request": "launch"
},


    {
      "name": "Attach To npm",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "address": "localhost",
      "restart": false,
      "sourceMaps": false,
      "outDir": null,
      "localRoot": "${workspaceRoot}",
      "remoteRoot": null
    }
  ]
}